<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnReplay"
            android:background="@drawable/ic_autorenew_black_24dp"
            android:orientation="horizontal">
        </Button>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gb_bo_nen_nau"
                android:layout_marginRight="2dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:text="MAX"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:id="@+id/txtvMax"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gb_bo_nen_nau"
                android:layout_marginLeft="2dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Point"
                    android:textColor="#ffffff"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:id="@+id/txtvPoint"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gdvGamePlay"
            android:numColumns="4"
            android:background="@drawable/gb_bo_nen_nau"></GridView>
    </RelativeLayout>


</LinearLayout>